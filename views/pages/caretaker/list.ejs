<%- include('../../fragments/header.ejs') %>

<main>
  <h2>Lista opiekunów</h2>
  <table class="table-list">
    <thead>
    <tr>
      <th>Imię</th>
      <th>Nazwisko</th>
      <th>Email</th>
      <th>Główna rola</th>
      <th>Akcje</th>
    </tr>
    </thead>
    <tbody>
    <% for (let caretaker of caretakers) { %>
      <tr>
        <td><%= caretaker.name %> </td>
        <td><%= caretaker.surname %> </td>
        <td><%= caretaker.email %> </td>
        <td><%= caretaker.primaryRole %> </td>
        <td>
          <ul class="list-actions">
            <li><a href="/caretakers/details/<%=caretaker._id%>" class="list-actions-button-details">Szczegóły</a></li>
            <li><a href="/caretakers/edit/<%=caretaker._id%>" class="list-actions-button-edit">Edytuj</a></li>
            <li><a href="/caretakers/delete/<%=caretaker._id%>" class="list-actions-button-delete">Usuń</a></li>
          </ul>
        </td>
      </tr>
    <% } %>
    </tbody>
  </table>
  <p><a href="/caretakers/add" class="button-add" >Dodaj nowego opiekuna</a></p>
</main>

<%- include('../../fragments/footer.ejs') %>